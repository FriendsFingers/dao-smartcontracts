{
  "name": "dao-smartcontracts",
  "version": "1.0.0",
  "description": "Smart Contracts defining the FriendsFingers platform's DAO.",
  "files": [
    "contracts",
    "test"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "token",
    "truffle",
    "openzeppelin"
  ],
  "scripts": {
    "dev": "lite-server",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "vuepress build docs && sh docs/deploy/deploy.sh",
    "console": "truffle develop",
    "compile": "truffle compile --all",
    "test": "scripts/test.sh",
    "coverage": "scripts/coverage.sh",
    "clean": "rm -rf coverage",
    "profile": "npm run clean && npm run coverage && open coverage/index.html",
    "flat": "scripts/flat.sh",
    "analyze": "scripts/analyze.sh",
    "version": "scripts/version.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsFingers/dao-smartcontracts.git"
  },
  "homepage": "https://github.com/FriendsFingers/dao-smartcontracts/",
  "bugs": {
    "url": "https://github.com/FriendsFingers/dao-smartcontracts/issues"
  },
  "author": "FriendsFingers (https://www.friendsfingers.com)",
  "contributors": [
    {
      "name": "Vittorio Minacori",
      "url": "https://github.com/vittominacori"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "coveralls": "^3.0.2",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethereumjs-abi": "^0.6.6",
    "ethereumjs-util": "^6.0.0",
    "ethereumjs-wallet": "^0.6.3",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.2.5",
    "lite-server": "^2.4.0",
    "log4js": "^4.0.1",
    "prompt-sync": "^4.1.6",
    "solhint": "^1.5.0",
    "solidity-coverage": "^0.5.11",
    "surya": "^0.2.7",
    "truffle": "^4.1.15",
    "truffle-contract": "^3.0.7",
    "truffle-flattener": "^1.2.11",
    "truffle-hdwallet-provider": "^1.0.2",
    "truffle-wallet-provider": "^0.0.5",
    "web3": "0.20.6",
    "web3-eth-abi": "^1.0.0-beta.41",
    "web3-utils": "^1.0.0-beta.41"
  },
  "dependencies": {
    "erc-payable-token": "2.0.1",
    "eth-token-recover": "2.0.1",
    "openzeppelin-solidity": "2.0.0"
  }
}
