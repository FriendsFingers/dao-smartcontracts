{
  "name": "dao-smartcontracts",
  "version": "1.0.0",
  "description": "Smart Contracts defining the FriendsFingers platform's DAO.",
  "files": [
    "contracts",
    "test"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "token",
    "truffle",
    "openzeppelin"
  ],
  "scripts": {
    "dev": "lite-server",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "console": "truffle develop",
    "compile": "truffle compile --all",
    "test": "scripts/test.sh",
    "coverage": "scripts/coverage.sh",
    "clean": "rm -rf coverage",
    "profile": "npm run clean && npm run coverage && open coverage/index.html",
    "flat": "scripts/flat.sh",
    "analyze": "scripts/analyze.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsFingers/dao-smartcontracts.git"
  },
  "homepage": "https://github.com/FriendsFingers/dao-smartcontracts/",
  "bugs": {
    "url": "https://github.com/FriendsFingers/dao-smartcontracts/issues"
  },
  "author": "FriendsFingers (https://www.friendsfingers.com)",
  "contributors": [
    {
      "name": "Vittorio Minacori",
      "url": "https://github.com/vittominacori"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethereumjs-util": "^6.1.0",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.4.1",
    "lite-server": "^2.4.0",
    "openzeppelin-test-helpers": "^0.1.2",
    "pify": "^4.0.1",
    "solhint": "^1.5.1",
    "solidity-coverage": "https://github.com:rotcivegaf/solidity-coverage.git#5875f5b7bc74d447f3312c9c0e9fc7814b482477",
    "surya": "^0.2.8",
    "truffle": "^5.0.7",
    "truffle-flattener": "1.2.12"
  },
  "dependencies": {
    "erc-payable-token": "2.1.0",
    "eth-token-recover": "2.1.1",
    "openzeppelin-solidity": "2.1.3"
  }
}
